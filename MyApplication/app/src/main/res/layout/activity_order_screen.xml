<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.kuba.planecake.OrderScreen">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout">

        <Button
            android:background="@drawable/buttonshape"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="Tables"
            android:onClick="assignTable"
            android:id="@+id/table"
            android:layout_margin="5dp" />

        <Button
            android:background="@drawable/buttonshape"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="CrÃªpes..."
            android:onClick="pancakeOrder"
            android:id="@+id/pancake"
            android:layout_weight="1"
            android:layout_margin="5dp" />

        <Button
            android:background="@drawable/buttonshape"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Boissons"
            android:onClick="drinkOrder"
            android:id="@+id/drink"
            android:layout_weight="1"
            android:layout_margin="5dp" />

        <Button
            android:background="@drawable/buttonshape"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="Envoyer"
            android:onClick="sendToKitchen"
            android:id="@+id/send"
            android:layout_margin="5dp" />
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/frameLayoutFragment"
        android:layout_below="@+id/linearLayout">

    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/frameLayoutFragment2"
        android:layout_below="@+id/linearLayout" />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/frameLayoutFragment3"
        android:layout_below="@+id/linearLayout" />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/frameLayoutFragment4"
        android:layout_below="@+id/linearLayout" />

</RelativeLayout>


