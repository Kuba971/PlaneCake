<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".OrderScreenFragment">

<CheckBox
android:layout_width="109dp"
android:layout_height="212dp"
android:text="Table 1"
android:id="@+id/checkBox"
android:layout_gravity="top|left" />

<CheckBox
android:layout_width="wrap_content"
android:layout_height="206dp"
android:text="Table 3"
android:id="@+id/checkBox3"
android:layout_gravity="right|top"
    android:layout_alignTop="@+id/checkBox2"
    android:layout_alignLeft="@+id/checkBox6"
    android:layout_alignStart="@+id/checkBox6" />

<CheckBox
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Table 4"
android:id="@+id/checkBox4"
android:layout_gravity="left|center_vertical"
    android:layout_alignTop="@+id/checkBox5"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true" />

<CheckBox
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Table 5"
android:id="@+id/checkBox5"
android:layout_gravity="center"
    android:layout_alignTop="@+id/checkBox6"
    android:layout_centerHorizontal="true" />

<CheckBox
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Table 6"
android:id="@+id/checkBox6"
android:layout_gravity="right|center_vertical"
    android:layout_centerVertical="true"
    android:layout_alignLeft="@+id/checkBox9"
    android:layout_alignStart="@+id/checkBox9" />

<CheckBox
android:layout_width="wrap_content"
android:layout_height="217dp"
android:text="Table 7"
android:id="@+id/checkBox7"
android:layout_gravity="left|bottom"
android:singleLine="false"
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true" />

<CheckBox
android:layout_width="wrap_content"
android:layout_height="214dp"
android:text="Table 8"
android:id="@+id/checkBox8"
android:layout_gravity="center_horizontal|bottom"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true" />

<CheckBox
android:layout_width="wrap_content"
android:layout_height="220dp"
android:text="Table 9"
android:id="@+id/checkBox9"
android:layout_gravity="right|bottom"
    android:layout_alignParentBottom="true"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true" />

<CheckBox
android:layout_width="91dp"
android:layout_height="210dp"
android:text="Table 2"
android:id="@+id/checkBox2"
android:layout_gravity="center_horizontal|top"
    android:layout_alignParentTop="true"
    android:layout_alignLeft="@+id/checkBox5"
    android:layout_alignStart="@+id/checkBox5" />

</RelativeLayout>